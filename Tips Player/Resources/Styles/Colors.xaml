<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Tips Player Dark Theme Colors -->
    <Color x:Key="AccentColor">#6366F1</Color>
    <Color x:Key="AccentColorLight">#818CF8</Color>
    <Color x:Key="AccentColorDark">#4F46E5</Color>

    <Color x:Key="PageBackground">#0A0A0B</Color>
    <Color x:Key="CardBackground">#1A1A1D</Color>
    <Color x:Key="CardBackgroundHover">#252529</Color>
    <Color x:Key="SurfaceBackground">#141416</Color>

    <Color x:Key="TextPrimary">#FAFAFA</Color>
    <Color x:Key="TextSecondary">#A1A1AA</Color>
    <Color x:Key="TextMuted">#71717A</Color>

    <Color x:Key="BorderColor">#27272A</Color>
    <Color x:Key="DividerColor">#3F3F46</Color>

    <!-- Legacy colors for compatibility -->
    <Color x:Key="Primary">#6366F1</Color>
    <Color x:Key="PrimaryDark">#818CF8</Color>
    <Color x:Key="PrimaryDarkText">#FAFAFA</Color>
    <Color x:Key="Secondary">#1A1A1D</Color>
    <Color x:Key="SecondaryDarkText">#A1A1AA</Color>
    <Color x:Key="Tertiary">#4F46E5</Color>

    <Color x:Key="White">#FAFAFA</Color>
    <Color x:Key="Black">#0A0A0B</Color>
    <Color x:Key="OffBlack">#141416</Color>
    <Color x:Key="MidnightBlue">#190649</Color>
    <Color x:Key="Magenta">#D600AA</Color>

    <Color x:Key="Gray100">#F4F4F5</Color>
    <Color x:Key="Gray200">#E4E4E7</Color>
    <Color x:Key="Gray300">#D4D4D8</Color>
    <Color x:Key="Gray400">#A1A1AA</Color>
    <Color x:Key="Gray500">#71717A</Color>
    <Color x:Key="Gray600">#52525B</Color>
    <Color x:Key="Gray700">#3F3F46</Color>
    <Color x:Key="Gray800">#27272A</Color>
    <Color x:Key="Gray900">#18181B</Color>
    <Color x:Key="Gray950">#0A0A0B</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <SolidColorBrush x:Key="PageBackgroundBrush" Color="{StaticResource PageBackground}"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardBackground}"/>
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}"/>

    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource Tertiary}"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}"/>

    <SolidColorBrush x:Key="Gray100Brush" Color="{StaticResource Gray100}"/>
    <SolidColorBrush x:Key="Gray200Brush" Color="{StaticResource Gray200}"/>
    <SolidColorBrush x:Key="Gray300Brush" Color="{StaticResource Gray300}"/>
    <SolidColorBrush x:Key="Gray400Brush" Color="{StaticResource Gray400}"/>
    <SolidColorBrush x:Key="Gray500Brush" Color="{StaticResource Gray500}"/>
    <SolidColorBrush x:Key="Gray600Brush" Color="{StaticResource Gray600}"/>
    <SolidColorBrush x:Key="Gray900Brush" Color="{StaticResource Gray900}"/>
    <SolidColorBrush x:Key="Gray950Brush" Color="{StaticResource Gray950}"/>
</ResourceDictionary>
