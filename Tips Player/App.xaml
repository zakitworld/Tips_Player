<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Tips_Player"
             xmlns:converters="clr-namespace:Tips_Player.Converters"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="Tips_Player.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                <ResourceDictionary Source="Resources/Styles/PlayerStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>


            <!-- Global Converters -->
            <converters:BoolToPlayPauseIconConverter x:Key="BoolToPlayPauseConverter"/>
            <converters:BoolToOpacityConverter x:Key="BoolToOpacityConverter"/>
            <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
            <converters:MediaTypeToIconConverter x:Key="MediaTypeToIconConverter"/>
            <converters:IsNotNullConverter x:Key="IsNotNullConverter"/>
            <converters:BoolToMuteConverter x:Key="BoolToMuteConverter"/>
            <converters:BoolToFavoriteIconConverter x:Key="BoolToFavoriteIconConverter"/>
            <converters:BoolToFavoriteColorConverter x:Key="BoolToFavoriteColorConverter"/>
            <converters:PercentToProgressConverter x:Key="PercentToProgressConverter"/>
            <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
